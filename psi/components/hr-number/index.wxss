.page_box {
  width: 100%;
  height: auto;
  background: #f3f7f7;
  overflow: hidden;
}

.input_view {
  width: 700rpx;
  background: #fff;
  box-sizing: border-box;
}

.title {
  display: block;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #999;
}

.input_box {
  /* background: #ffc; */
  display: flex;
  padding: 20rpx 0;
}

.input_label {
  font-size: 35rpx;
  color: #999;
  font-weight: bold;
  margin-right: 5rpx;
}

.content {
  font-size: 80rpx;
  line-height: 90rpx;
  font-weight: bold;
  letter-spacing: 5rpx;
}

.className {
  width: 6rpx;
  height: 90rpx;
  background: #666;
  border-radius: 6rpx;
  animation: twinkling 1s infinite;
}

.animated {
  animation-duration: 1s;
  animation-fill-mode: both;
}

.pay {
  display: block;
  width: 100%;
  height: 120rpx;
  border-radius: 12rpx;
  background: #62b900;
  color: #fff;
  text-align: center;
  line-height: 120rpx;
  font-size: 40rpx;
}



.complete {
  background: #fff;
}

.key_box {
  overflow: hidden;
}

.keys {
  float: left;
  width: 33.33%;
  height: 140rpx;
  text-align: center;
  line-height: 140rpx;
  font-size: 50rpx;
  font-weight: bold;
  color: #333;
  border-left: 1px solid #eee;
  box-sizing: border-box;
  border-top: 1px solid #eee;
}

.border0 {
  border-left: 0;
}

.bb-1 {
  border-bottom: 1px solid #eee;
}

.bg_color {
  background: #eee;
}

.dis-flex {
  display: flex !important;
  /* flex-wrap: wrap; */
}

.flex-box {
  flex: 1;
}

.flex-x-end {
  justify-content: flex-end;
}



/* new */
.keyboard {
  width: 100%;
  background: #fff;
  display: flex;         /*flex布局*/
  flex-direction: column;   /*上下排列（默认左右排列）*/
  height: 60vh;
}
.result{
  flex:1;
  background:#fff;
  position: relative;
  display: flex;
  align-items: center;
  border-top:  1rpx solid #eee;

}
.result-num{
  position: absolute;
  font-size: 27pt;
  bottom: 50rpx;
  left: 30rpx;
}
.result-op{
  position: absolute;
  font-size: 15pt;
  bottom: 10rpx;
  left: 30rpx;
}
.btns{
  flex:1;     /*都设置为1.平分*/
  display: flex;
  flex-direction: column;
  font-size: 17pt;
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
}
.btns>view{
  flex:1;
  display: flex;
}
.btns>view>view{
  flex-basis: 25%;     /*每一个按钮占一行的25%*/
  height:2.7em;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bg{
  background:#eee;
}