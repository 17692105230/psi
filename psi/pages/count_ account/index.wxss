/* pages/count_ account/index.wxss */
page{
	background-color: var(--white);
}
.save {
  text-align: left;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.3);
}
.null-content{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.cu-form-group {
	display: flex;
	align-items: center;
}
.cu-form-group text{
	display: inline-block;
	border-bottom:1rpx solid rgba(0, 0, 0, 0.3);
}
.right_box{
	flex: 1;
	display: flex;
	align-items: flex-end;
}
.right_box text{
	padding: 0;
	font-size: 36rpx;
}
.textarea_box{
	border: 1px solid rgba(0, 0, 0, 0.3);
	padding:10rpx !important;
}
.remark_box{
	position: relative;
}
.remark_box text{
	position: absolute;
	bottom: 40rpx;
	right: 40rpx;
	padding: 0;
	margin: 0;
	font-size: 36rpx;
z-index: 9999;
	border:none !important;
}

.cu-capsule-border-goldb{
  border: 1px solid var(--goldb);
}
.cu-capsule-border-EB2020{
  border: 1px solid #EB2020;
}
#discout-box {
  border-radius: 100rpx;
}
#discount {
  border-right: 1px solid var(--goldb);

  background-color: #FDF5E6;
  color: #FFB523;
}
#discount-val {
  border-left: none;
  background-color: white;
  color: #FFB523;
}

#balance {
  border-right: 1px solid #EB2020;
  background-color: #FFEFEF;
  color: #EB2020;
}
#balance-val {
  background-color: white;
  border-left: none;
  color: #EB2020;
}