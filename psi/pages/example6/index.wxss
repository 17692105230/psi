page {
  height: 100%;
}

.dropBox {
  border-radius: 0 0 20rpx 20rpx;
  height: 500rpx;
  position: absolute;
  width: 100%;
  height: 0px;
  overflow: hidden;
  transition: all 0.3s ease-in-out;
  z-index: 99999;
}

.btnbox {
  display: flex;
}

.btnbox view {
  width: 50%;
}

.listBox {
  filter: brightness(50%);
}

.listBox view {
   pointer-events: none;
}
.home-custom .cu-bar .action:first-child>view {
  margin: 0;
}

.home-custom .cu-bar .action>view {
  position: relative;
  font-size: 38rpx !important;
}

.home-custom .cu-bar .action>view .cu-tag.badge {
  top: -15rpx;
  right: -15rpx;
}

.home-custom .search-form input {
  height: 40rpx;
  line-height: 40rpx;
}

.cu-menu {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 0;
  z-index: 1127;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cu-menu view {
  border-left: 1rpx solid #dedede;
  width: 90rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 40rpx;
}

.NavMenu {
  background-color: #fff;
  position: fixed;
  width: 100%;
  left: 0;
  z-index: 1025;
}

.home-swiper {
  position: relative;
  overflow: hidden;
  background-color: #fff;
}

.home-swiper swiper .uni-swiper-dots,
.home-swiper swiper .a-swiper-dots,
.home-swiper swiper .wx-swiper-dots {
  bottom: 35rpx;
}

.home-swiper .screen-swiper {
  height: 400rpx;
}

.home-swiper .swiperBG {
  position: relative;
}

.home-zixun {
  min-height: 80rpx;
}

.home-zixun image {
  width: 63rpx;
  height: 37rpx;
}

.home-zixun swiper {
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 30rpx;
}

.home-zixun swiper .cu-tag {
  font-size: 24rpx;
  height: 40rpx;
  padding: 0 10rpx;
  margin-right: 15rpx;
}

.radiusCard {
  border-radius: 10rpx;
  overflow: hidden;
  background-color: transparent;
}

.radiusCard image {
  display: block;
}

.home-ms {
  min-height: 80rpx;
}

.home-ms image {
  width: 125rpx;
  height: 37rpx;
}